<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_indigo50"
            android:orientation="horizontal"
            android:gravity="left|center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="32dp"
            android:paddingLeft="22dp"
            tools:ignore="RtlHardcoded">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter"
                android:layout_gravity="left"
                android:contentDescription="@string/app_name"
                android:src="@drawable/agenda" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/act_title"
                style="@android:style/TextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/material_bluegrey800"
                android:textSize="16sp"
                android:textStyle="normal"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/material_grey100"
            android:orientation="vertical"
            android:gravity="left|center_vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:paddingRight="32dp"
            android:paddingLeft="22dp"
            tools:ignore="RtlHardcoded">

            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/act_content"
                style="@android:style/TextAppearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/material_bluegrey800"
                android:textSize="12sp"
                android:padding="3dp"
                android:maxLines="5"
                android:ellipsize="end"
                app:animation_duration="1000"
                android:background="@drawable/shape_soft_red"
                android:textStyle="normal"  />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/act_date"
                    style="@android:style/TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_bluegrey700"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/shape_soft_blue"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/act_time"
                    style="@android:style/TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_bluegrey700"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/shape_soft_blue"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/act_readmore"
                    style="@android:style/TextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/material_bluegrey700"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:text="@string/more"
                    android:background="@drawable/shape_rectangle1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>